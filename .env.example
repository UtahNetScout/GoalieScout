# AI Provider Configuration
# Options: openai, anthropic, ollama
AI_PROVIDER=openai

# OpenAI API Configuration (if using openai provider)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Configuration (if using anthropic provider - often cheaper!)
# Get key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama Configuration (if using ollama provider - FREE and runs locally!)
# Install Ollama from: https://ollama.ai/
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Enhanced Features Configuration
ENABLE_ENHANCED_DATA=true
ENABLE_INJURY_TRACKING=true
ENABLE_MAXPREPS=true

# Blogging Configuration
ENABLE_BLOGGING=true

# Social Media Configuration
ENABLE_SOCIAL=true
# Set to false to actually post (not recommended until fully configured)
SOCIAL_DRY_RUN=true

# X (Twitter) API Configuration
# Apply for API access at: https://developer.twitter.com/
X_BEARER_TOKEN=your-x-bearer-token-here
X_API_KEY=your-x-api-key-here
X_API_SECRET=your-x-api-secret-here
X_ACCESS_TOKEN=your-x-access-token-here
X_ACCESS_TOKEN_SECRET=your-x-access-token-secret-here

# Optional: Database Configuration
# DATABASE_FILE=goalies_data.json
